<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:background="@drawable/alert_dialog_fire">

    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                  android:orientation="horizontal"
                  android:weightSum="5">
        <TextView android:layout_width="match_parent" android:layout_height="60dp" android:layout_weight="3"
                  android:text="비밀번호"
                  android:gravity="center|center_horizontal|center_vertical" android:textColor="@color/textMain"/>
        <EditText android:layout_width="match_parent" android:layout_height="40dp" android:layout_weight="2"
                  android:id="@+id/deleteCommentPassword" android:hint="생략 가능" android:textSize="12sp"
                  android:layout_marginRight="5dp"
                  android:textColorHint="#282828"
                  android:gravity="center" android:inputType="textPassword"
                  android:background="@drawable/dialog_submit_space" android:textColor="#000000"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="#000000"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                  android:orientation="horizontal">
        <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="삭제"
                android:textColor="@color/textMain"
                android:background="@android:color/transparent"
                android:textSize="14sp"
        />
        <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#000000"/>
        <Button
                android:id="@+id/fireButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="신고"
                android:layout_weight="1"
                android:textColor="@color/textMain"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>