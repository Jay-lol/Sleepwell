<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/comment_main"
                                                   android:background="@drawable/custom_ripple_effect"
                                                   android:clickable="true">

    <View
            android:layout_width="wrap_content"
            android:layout_height="2dp" android:id="@+id/view" app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="#C8C8C8"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp" app:srcCompat="@drawable/commu_tab_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/profile"
            app:layout_constraintStart_toEndOf="@+id/ifRere" android:layout_marginStart="16dp"/>
    <TextView
            android:text="userId"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/userId"
            app:layout_constraintStart_toEndOf="@+id/profile" android:layout_marginStart="4dp"
            android:textAlignment="viewStart" android:maxLength="15" android:textStyle="bold" android:textSize="18sp"
            android:textColor="#FFFFFF" app:layout_constraintEnd_toStartOf="@+id/rereply"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/replyContent"
            app:layout_constraintTop_toBottomOf="@+id/userId"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/profile" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textColor="#FBEFEF" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageButton"
            android:background="@drawable/ic_thumb_up_black_24dp" app:layout_constraintTop_toBottomOf="@+id/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.04" app:layout_constraintStart_toEndOf="@+id/ifRere"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ifRere" android:layout_marginTop="8dp" android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_subdirectory_arrow_right_black_24dp" android:contentDescription="TODO"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rereply" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view" android:background="@drawable/ic_textsms_black_24dp"
            android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>