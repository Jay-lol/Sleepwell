<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <View
            android:layout_width="wrap_content"
            android:layout_height="2dp" android:id="@+id/view" app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="#000000"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp" app:srcCompat="@drawable/commu_tab_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/profile"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="16dp"/>
    <TextView
            android:text="userId"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/userId"
            app:layout_constraintStart_toEndOf="@+id/profile" android:layout_marginStart="4dp"
            android:textAlignment="viewStart" android:maxLength="15" android:textStyle="bold" android:textSize="18sp"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/replyContent"
            app:layout_constraintTop_toBottomOf="@+id/userId"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/profile" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textColor="#FBEFEF"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star_big_on"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageButton"
            android:background="@color/colorMain" app:layout_constraintTop_toBottomOf="@+id/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.04" app:layout_constraintStart_toEndOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView3" android:layout_marginTop="8dp" android:layout_marginStart="5dp"
            android:contentDescription="TODO" app:srcCompat="@drawable/ic_subdirectory_arrow_right_black_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>