<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:layout_marginLeft="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="14sp"
            android:textColor="@android:color/background_light"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" android:maxLines="4"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/channelName"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/commentsButton"
            android:layout_marginBottom="2dp" android:maxLines="1"/>
    <Button
            android:id="@+id/likeButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="좋아요"
            android:layout_weight="1" app:layout_constraintTop_toBottomOf="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:layout_marginTop="2dp"/>
    <Button
            android:id="@+id/dislikeButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="싫어요"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            app:layout_constraintStart_toEndOf="@+id/likeButton"
            android:layout_marginStart="4dp" android:layout_marginTop="2dp"/>
    <Button
            android:text="댓글"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/commentsButton" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon" android:layout_marginTop="2dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/likeNumber"
            app:layout_constraintStart_toStartOf="@+id/icon" app:layout_constraintBottom_toBottomOf="@+id/icon"
            android:textColor="#f1f2f3" android:textStyle="bold" android:textAlignment="center"
            android:background="#00000000" android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="sans-serif-medium"
            android:textSize="18sp" android:layout_marginBottom="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>