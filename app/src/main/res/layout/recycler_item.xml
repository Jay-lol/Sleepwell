<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:layout_marginLeft="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/title"
            android:textSize="24dp"
            android:textColor="@android:color/background_light"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toTopOf="@+id/desc"
            android:layout_marginBottom="4dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/desc"
            android:textSize="16dp"
            android:textColor="#666666"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginLeft="16dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/button1"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:text="좋아요"
            android:layout_weight="1" app:layout_constraintTop_toBottomOf="@+id/icon"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="싫어요"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/desc"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="댓글"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/button3" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/desc" app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>