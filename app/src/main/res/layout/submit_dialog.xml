<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:visibility="visible" android:background="@drawable/alert_dialog_border">

    <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:gravity="center"
            android:textColor="@color/textMain"
            android:textSize="16sp"
            android:text="영상 등록하기"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/alert_dialog_title"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:layout_marginTop="5dp">

        <TextView android:layout_width="50dip" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:layout_marginLeft="10dp"
                  android:text="링크" android:textStyle="bold" android:fontFamily="sans-serif-medium"
                  android:textSize="18sp"
                  android:layout_marginRight="10dp" android:textColor="#000000"/>

        <EditText
                android:id="@+id/linkSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:textColorHint="#ffffff"
                android:textColor="#000000"
                android:textSize="16sp"
                android:hint="유튜브링크 필수!! http://" android:background="@drawable/dialog_submit_space"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:layout_marginTop="5dp">

        <TextView android:layout_width="50dip" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:layout_marginLeft="10dp"
                  android:text="제목" android:textStyle="bold" android:fontFamily="sans-serif-medium"
                  android:textSize="18sp"
                  android:layout_marginRight="10dp" android:textColor="#000000"/>

        <EditText
                android:id="@+id/titleSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textColorHint="#ffffff"
                android:hint="생략시 원래 영상제목으로 등록" android:background="@drawable/dialog_submit_space"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:weightSum="100"
                  android:layout_marginTop="5dp">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:layout_marginLeft="10dp"
                  android:text="이름" android:textStyle="bold" android:fontFamily="sans-serif-medium"
                  android:textSize="14sp"
                  android:layout_marginRight="10dp" android:textColor="#000000" android:layout_weight="27"/>

        <EditText
                android:id="@+id/writerSubmit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_weight="23"
                android:textColorHint="#ffffff"
                android:hint="생략 가능" android:background="@drawable/dialog_submit_space"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="비밀번호" android:textStyle="bold" android:fontFamily="sans-serif-medium"
                  android:textSize="14sp"
                  android:textColor="#000000"
                  android:layout_weight="27"/>
        <EditText
                android:id="@+id/passwordSubmitBoard"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textColorHint="#ffffff"
                android:hint="생략 가능" android:inputType="textPassword" android:password="true"
                android:layout_weight="23" android:background="@drawable/dialog_submit_space"/>
    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/sendSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="제출"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@android:color/transparent" android:textStyle="bold"/>

        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

        <Button
                android:id="@+id/closeSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="취소"
                android:textColor="@color/cancelTextMain"
                android:textSize="16sp"
                android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>